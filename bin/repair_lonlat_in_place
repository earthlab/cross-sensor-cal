#!/usr/bin/env python
"""Repair parquet files in-place by adding lon/lat columns when missing."""

from __future__ import annotations

import argparse
from pathlib import Path

from cross_sensor_cal.parquet_export import repair_lonlat_in_place


def main(argv: list[str] | None = None) -> int:
    parser = argparse.ArgumentParser(
        description="Add lon/lat columns to parquet exports that are missing them.",
    )
    parser.add_argument("folder", type=Path, help="Flightline directory containing parquet files")
    args = parser.parse_args(argv)

    repair_lonlat_in_place(args.folder)
    return 0


if __name__ == "__main__":
    raise SystemExit(main())
